extends ../base

block outer
 .jumbotron
  .row
   .col-md-4.col-md-offset-4
    .panel.panel-success
     .panel-heading
      h2.panel-title Please login.
     .panel-body
      form.form-login(role="form",action="/setting/login/",method="post")
       if doLogin
        .alert.alert-danger Faild to login.
       .form-group
         input.form-control(placeholder="ID",type="text",name="id",value="#{id}",required,autofocus)
       .form-group
         input.form-control(placeholder="Password",type="password",name="password",value="",required)
       .form-group
         button.btn.btn-lg.btn-primary.btn-block(type="submit") Login

