extends ./base

block content
 .jumbotron
  .row
   .col-md-4.col-md-offset-4
    .panel.panel-success
     .panel-heading
      h2.panel-title Please sign in
     .panel-body
      form.form-signin(role="form",action="./",method="post")
       .form-group
         input.form-control(placeholder="Login ID",type="text",value="",required,autofocus)
       .form-group
         input.form-control(placeholder="Password",type="password",value="",required)
       .form-group
         button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in

